    &pro_micro {
        kscan0: kscan {
            compatible = "zmk,kscan-gpio-matrix";
            label = "Sculpt kscan";

            diode-direction = "col2row";

            row-gpios = <&pro_micro 4 GPIO_ACTIVE_HIGH>,
                        <&pro_micro 5 GPIO_ACTIVE_HIGH>;

            col-gpios = <&pcf8575 0 GPIO_ACTIVE_HIGH>,
                        <&pcf8575 1 GPIO_ACTIVE_HIGH>;
        };
    };